call pathogen#infect()
set tabstop=4
set smartindent

set tabstop=4
set shiftwidth=4
set expandtab

syntax on
filetype on
filetype plugin on
syntax enable

set ignorecase
set smartcase
set hlsearch
set incsearch

set scrolloff=3

set ruler

set backspace=indent,eol,start

set background=dark
let g:solarized_termtrans=1
let g:solarized_termcolors=256
colorscheme solarized
